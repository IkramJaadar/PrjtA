@model List<Sliders>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">

                <h4 class="card-title">Sliders</h4>
                <div>

                    <p>
                        <a href="/Sliders/Create"> <i class="fa fa-plus"></i></a>
                    </p>

                </div>
            </div>
           
           
            <div class="card-body">
                @{
                    AlertModel? alert = ViewBag.AlertMessage == null ? null : (AlertModel)ViewBag.AlertMessage;
                }
                @if (alert != null)
                {
                    <div class="alert alert-@(!alert.isError ? "success" : "danger") alert-dismissible fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>@(!alert.isError ? "Success!" : "Erreur!")</strong> @alert.Message.
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Num</th>
                                <th>Contenu</th>
                            
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Sliders sliders in Model)
                            {

                                <tr>

                                    <td>@sliders.Num</td>
                                    <td>@sliders.Contenu</td>

                                    <td><img src="/Media/SlideImg/@sliders.Num" width="100px" height="100px" /></td>

                                    <td width="250px">
                                        <center>
                                            <a href="/Sliders/Edit/@sliders.Num" class="btn btn-rounded btn-primary">
                                                <i class="fa fa-edit color-success"></i>
                                            </a>
                                            <a href="/Sliders/Delete/@sliders.Num" class="btn btn-rounded btn-danger">

                                                <i class="fa fa-trash color-danger"></i>

                                            </a>
                                           
                                        </center>

                                    </td>

                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

